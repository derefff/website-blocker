{
	"name": "website blocker",
	"description": "extension that blocks chosen websites",
	"version": "1.0",
	"permissions": ["tabs", "storage"],
	"background":{
		"scripts": ["js/background.js"],
		"persistent": false
	},
	"browser_action":{
		"default_icon": {"24":"img/icon.png"},
		"default_popup": "popup.html"
	},

	"manifest_version": 2
}
